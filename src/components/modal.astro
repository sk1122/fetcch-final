---
import { Image } from "astro:assets"
import DownloadIcon from '@/public/assets/download.svg'
---
<style>
  /* The Modal */
  .modal {
    display: none; 
    position: fixed; 
    z-index: 100; 
    left: 0;
    right: 0;
    width: 100%; 
    height: 100%; 
    background-color: rgb(255,255,255,0.1); 
    backdrop-filter: blur(12px);
  }
  
  /* Modal Content */
  .modal-content {
    background-color: white;
    width: 786px;
    height: 236px;
    padding: 40px;
    margin: 400px auto 0px auto;

  }
  
  .close:hover,
  .close:focus {
    color: #000;
    text-decoration: none;
    cursor: pointer;
  }
  </style>
  <script>

    let modal = document.getElementById("myModal");
    let btn = document.getElementById("openModal");
    let span = document.getElementsByClassName("close")[0];
    
    btn.onclick = function() {
      modal.style.display = "block";
    }

    span.onclick = function() {
      modal.style.display = "none";
    }

    window.onclick = function(event) {
      if (event.target == modal) {
        modal.style.display = "none";
      }
    }
    </script>


<!-- The Modal -->
<div id="myModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content rounded-[18px] border-[3px] border-[#2454FF]">
  
    <div class="flex justify-between items-center">
      <p class="text-[40px] leading-[50px] font-bold ">Download report</p>
      <span class="close"><svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" viewBox="0 0 35 35" fill="none">
        <path d="M8.51367 25.5411L17.0274 17.0274M17.0274 17.0274L25.5411 8.51367M17.0274 17.0274L8.51367 8.51367M17.0274 17.0274L25.5411 25.5411" stroke="#2B67E8" stroke-width="4.25686" stroke-linecap="round" stroke-linejoin="round"/>
        </svg></span>
    </div>
    <div class="border-[1px] rounded-xl h-16 flex  p-[6px] !pl-6 mt-[37px] ">
      <input type="text" class="focus:outline-none focus:ring-0 border-none rounded-xl w-full h-full text-lg text-[#6B7280]" />
      <button class="flex w-fit shrink-0 bg-primary text-white rounded-lg gap-[13px] h-[52px] items-center justify-center p-5 text-[18.2px] leading-[26px] font-bold overflow-hidden" id="downloadPdf">
        <p class="shrink-0">Download Report</p>
        <Image src={DownloadIcon} alt="downloadicon" class="fill-white" />
      </button>
    </div>
  </div>

</div>