---
const { name } = Astro.props
const { firstParagraph } = Astro.props
const { secondParagraph } = Astro.props
const { thirdParagraph } = Astro.props
const { fourthParagraph } = Astro.props
---

<section class="max-w-7xl mx-auto mt-20">
  <div class="bg-[#F6F9FC] border border-[#9FCFFF] p-10 rounded-xl">
    <h3 class="text-3xl font-semibold">About {name}</h3>
    <div class="mt-8">
      {
        firstParagraph && (
          <p class="text-md md:text-xl text-gray-500 font-manrope">
            {firstParagraph}
          </p>
        )
      }
      {
        secondParagraph && (
          <p class="text-md md:text-xl text-gray-500 mt-4 font-manrope">
            {secondParagraph}
          </p>
        )
      }
      {
        thirdParagraph && (
          <p class="text-md md:text-xl text-gray-500 mt-4 font-manrope">
            {thirdParagraph}
          </p>
        )
      }
      {
        fourthParagraph && (
          <p class="text-md md:text-xl text-gray-500 mt-4 font-manrope">
            {fourthParagraph}
          </p>
        )
      }
    </div>
  </div>
</section>
